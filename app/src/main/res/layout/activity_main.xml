<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animSheep"
        android:layout_width="match_parent"
        android:layout_height="500dp"

        android:scaleType="centerCrop"
        app:lottie_rawRes="@raw/countingsheepanim"







        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.826"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        tools:layout_editor_absoluteX="-4dp" />

    <Button
        android:id="@+id/counteBtn"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:backgroundTint="@color/black"
        android:onClick="counteBtn"
        android:text="@string/touchCounte"
        android:textColor="@color/amareloescuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="427dp"
        android:layout_height="37dp"
        android:textColor="@color/purple_500"
        android:layout_marginBottom="20dp"
        android:text="Click para contar os carneiros : 0 CONTADOS"
        android:textAlignment="center"
        android:textSize="19dp"
        android:layout_marginEnd="0dp"


        app:layout_constraintBottom_toTopOf="@+id/counteBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>